<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Database Tables</title>
    <link rel="stylesheet" href="/styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"> <!-- Font Awesome -->
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f9f9f9;
            margin: 0;
            padding: 20px;
        }

        h1 {
            color: #333;
            text-align: center;
            margin-bottom: 20px;
        }

        ul {
            list-style-type: none;
            padding: 0;
        }

        li {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin: 10px 0;
            background-color: #fff;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            padding: 15px;
            transition: background-color 0.3s;
        }

        li:hover {
            background-color: #f0f0f0;
        }

        a {
            text-decoration: none;
            color: #007bff;
            font-weight: bold;
            flex-grow: 1; /* Allow the name to take available space */
        }

        a:hover {
            text-decoration: underline;
        }

        button {
            background-color: #007bff; /* Gray tone for default buttons */
            color: white;
            padding: 10px 15px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            margin-left: 10px; /* Space between buttons */
        }

        button:hover {
            background-color: #0069d9; /* Darker gray on hover */
        }

        .play-button {
            background-color: #28a745; /* Green for play button */
        }

        .play-button:hover {
            background-color: #218838; /* Darker green on hover */
        }

        .reset-button {
            background-color: #ffc107; /* Yellow for reset button */
        }

        .reset-button:hover {
            background-color: #e0a800; /* Darker yellow on hover */
        }

        .delete-button {
            background: none; /* No background */
            border: none; /* No border */
            color: #dc3545; /* Red color for delete */
            cursor: pointer;
            font-size: 16px; /* Icon size */
        }
        .delete-button:hover {
            background-color: #ece5e5; /* Darker yellow on hover */
        }
    </style>
    <script>
        function confirmDelete(tableName) {
            const password = prompt("Enter password to delete the category:");
            if (password === "password") {
                location.href = `/delete/${tableName}`;
            } else {
                alert("Incorrect password. Deletion cancelled.");
            }
        }
    </script>
</head>
<body>
    <h1>Pairwise Comparison Categories</h1>

    <ul>
        <% tables.forEach(function(table) { %>
            <% if (table.value !== 'sqlite_sequence') { %>
                <li>
                    <a href="/categories/<%= table.value %>"><%= table.value %></a>
                    <div style="display: flex; align-items: center;">
                        <input type="password" name="password" placeholder="Pass" maxlength="4" required style="display: none; margin-right: 10px; width: 50px;" class="password-input">
                        <button class="delete-button" onclick="toggleDeleteForm(this)">
                            <i class="fas fa-trash-alt"></i>
                        </button>
                        <button class="reset-button" onclick="location.href='/reset/<%= table.value %>'">Reset</button>
                        <button class="play-button" onclick="location.href='/categories/<%= table.value %>'">Play</button>
                    </div>
                </li>
            <% } %>
        <% }); %>
    </ul>
    
    <script>
    function toggleDeleteForm(button) {
        const input = button.previousElementSibling; // Get the password input
    
        // Toggle visibility
        if (input.style.display === 'none' || input.style.display === '') {
            input.style.display = 'inline'; // Show password input
            input.focus(); // Focus on the password input
        } else {
            // If the input is visible, check if there's a value
            if (input.value) {
                // Submit the form if there's a password
                const form = document.createElement('form');
                form.method = 'POST';
                form.action = `/delete/${button.parentElement.previousElementSibling.innerText}`;
                const passwordField = document.createElement('input');
                passwordField.type = 'hidden';
                passwordField.name = 'password';
                passwordField.value = input.value;
                form.appendChild(passwordField);
                document.body.appendChild(form);
                form.submit(); // Submit the form
            } else {
                // Hide input if no password was provided
                input.style.display = 'none';
            }
        }
    }
    </script>
    
    
    
    
    
    <button type="button" class="back-next-button" onclick="location.href='/'">Back</button>
</body>
</html>
